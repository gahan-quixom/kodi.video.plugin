<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.example" version="0.1.0" name="First Kodi Video Plugin" provider-name="GAHAN">
<requires>
    <import addon="script.module.pyxbmct" version="1.1.4"/>
    <import addon="xbmc.python" version="2.14.0"/>
    <import addon="script.module.requests" version="2.9.1"/>
    <import addon="script.module.beautifulsoup" version="3.2.1"/>
</requires>
<extension point="xbmc.python.pluginsource" library="main.py">
  <provides>video</provides>
</extension>
    <onclick>ActivateWindow(movieinformation)</onclick>
<extension point="xbmc.addon.metadata">
    <onclick>ActivateWindow(movieinformation)</onclick>
  <summary lang="en">First Kodi Video Plugin</summary>
  <description lang="en">An example video plugin for Kodi mediacenter.</description>
  <disclaimer lang="en">vids are provided by www.vidsplay.com and fetched movie lib.</disclaimer>
  <assets>
    <icon>icon.png</icon>
    <fanart>fanart.png</fanart>
    <screenshot>resources\screenshot-01.jpg</screenshot>
    <screenshot>resources\screenshot-02.jpg</screenshot>
    <screenshot>resources\screenshot-03.jpg</screenshot>    
  </assets>
  <news>Updated with latest artwork metadata</news>
</extension>
</addon>
